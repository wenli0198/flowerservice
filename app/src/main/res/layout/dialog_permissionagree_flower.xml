<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/trans"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="23dp"
        android:layout_marginVertical="30dp"
        android:background="@drawable/ic_round_corner_white_12dp"
        android:paddingVertical="20dp"
        android:paddingHorizontal="23dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_permissionagree"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:layout_marginHorizontal="11dp"
            android:textColor="#FF222222"
            android:textSize="14sp"
            android:gravity="center"
            android:text="Clicking 'OK' means that you have read and agreed to grant this application this permission."
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="41dp"
            android:layout_marginBottom="9dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dlpeag_btn_cancle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/ic_border_gray_ll_1dp_round_corner_10dp"
                android:textColor="#FF999999"
                android:textSize="16sp"
                android:text="@string/word_cancel"
                android:textAllCaps="false"
                android:stateListAnimator="@null"
                android:textStyle="bold"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/dlpeag_btn_agree"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/ic_bg_btn"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="OK"
                android:textAllCaps="false"
                android:stateListAnimator="@null"
                android:layout_marginStart="16sp"
                android:textStyle="bold"
                tools:ignore="ButtonStyle,HardcodedText" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>