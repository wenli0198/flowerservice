<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_active_dialog"
        android:layout_marginHorizontal="19dp"
        android:elevation="1dp"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/dialog_star_active_layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="33dp"
        android:background="@drawable/ic_bg_active_dialog_flower"
        android:orientation="vertical"
        android:layout_marginTop="-65dp"
        android:paddingTop="70dp"
        android:paddingHorizontal="12dp"
        android:paddingBottom="50dp">

        <TextView
            android:id="@+id/dialog_star_active_tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:elevation="5dp"
            android:textStyle="bold"
            android:text="@string/flower_dialog_active_text"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/dialog_star_active_ib_star_1"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/icon_star_false"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/dialog_star_active_ib_star_2"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/icon_star_false"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/dialog_star_active_ib_star_3"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/icon_star_false"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/dialog_star_active_ib_star_4"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/icon_star_false"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/dialog_star_active_ib_star_5"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/icon_star_false"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_star_active_btn_notnow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_bg_active_dialog_notmow_btn"
                android:text="@string/flower_dialog_notnow"
                android:textAllCaps="false"
                android:textColor="@color/gray_ddd"
                android:textSize="16sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/dialog_star_active_btn_rate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:background="@drawable/ic_bg_active_dialog_rate_btn"
                android:text="@string/flower_dialog_rate"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:ignore="ButtonStyle,HardcodedText" />

        </LinearLayout>

    </LinearLayout>
    
</LinearLayout>