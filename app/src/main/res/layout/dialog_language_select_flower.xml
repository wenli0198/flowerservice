<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="20dp"
    android:background="@drawable/ic_round_corner_white_20dp_top">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="@string/language_select_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp"
        android:orientation="horizontal"
        tools:ignore="DisableBaselineAlignment">

        <LinearLayout
            android:id="@+id/language_select_view_en"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="25dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/ic_bg_language_select_yes">

            <TextView
                android:id="@+id/language_select_tv_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:maxLines="2"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                android:text="@string/language_select_en"
                android:gravity="center"/>

            <View
                android:id="@+id/language_select_view_en_select"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/icon_language_select_yes"
                android:layout_marginTop="22dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/language_select_view_sw"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="25dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/ic_bg_language_select_no"
            android:layout_marginStart="18dp">

            <TextView
                android:id="@+id/language_select_tv_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:maxLines="2"
                android:textSize="18sp"
                android:textColor="#FFD4D4D4"
                android:textStyle="bold|italic"
                android:text="@string/language_select_sw"
                android:gravity="center"/>

            <View
                android:id="@+id/language_select_view_sw_select"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/icon_language_select_no"
                android:layout_marginTop="22dp"/>

        </LinearLayout>
        
    </LinearLayout>
    
    <Button
        android:id="@+id/language_select_btn_next"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="37dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/ic_bg_btn"
        android:gravity="center"
        android:paddingVertical="2dp"
        android:paddingHorizontal="8dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="@string/word_next"/>

</LinearLayout>