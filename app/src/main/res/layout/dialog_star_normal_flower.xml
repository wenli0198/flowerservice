<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans"
    android:orientation="vertical"
    android:gravity="center">
    
    <ImageView
        android:layout_width="166dp"
        android:layout_height="135dp"
        android:background="@drawable/img_normal_dialog"
        android:elevation="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        android:paddingHorizontal="16dp"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="-65dp"
        android:paddingTop="70dp"
        android:background="@drawable/ic_bg_normal_dialog_flower">
        
        <TextView
            android:id="@+id/dialog_star_normal_tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/flower_dialog_normal_text"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/dialog_star_normal_ib_star_1"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/icon_star_false"
                android:layout_marginHorizontal="6dp"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/dialog_star_normal_ib_star_2"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/icon_star_false"
                android:layout_marginHorizontal="6dp"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/dialog_star_normal_ib_star_3"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/icon_star_false"
                android:layout_marginHorizontal="6dp"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/dialog_star_normal_ib_star_4"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/icon_star_false"
                android:layout_marginHorizontal="6dp"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/dialog_star_normal_ib_star_5"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/icon_star_false"
                android:layout_marginHorizontal="6dp"
                tools:ignore="ContentDescription" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_star_normal_btn_notnow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/ic_bg_normal_dialog_notmow_btn"
                android:text="@string/flower_dialog_notnow"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textAllCaps="false"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/dialog_star_normal_btn_rate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/ic_bg_normal_dialog_rate_btn"
                android:text="@string/flower_dialog_rate"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAllCaps="false"
                tools:ignore="ButtonStyle,HardcodedText"
                android:layout_marginStart="16dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>