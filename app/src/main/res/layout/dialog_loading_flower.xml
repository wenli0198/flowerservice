<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:background="@drawable/ic_round_corner_white_12dp">

    <ProgressBar
        android:id="@+id/dialog_progress_bar_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>

    <TextView
        android:text="@string/diaolg_loading_text"
        android:textColor="@color/gray_ddd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dialog_progress_bar_progress"
        android:layout_marginTop="10dp"/>

</RelativeLayout>