<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:background="@color/trans">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_dialog_cote"
        android:elevation="1dp"
        tools:ignore="ContentDescription"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="-100dp">

        <ImageButton
            android:id="@+id/dialog_delete_bank_account_ib_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/icon_close_2"
            android:layout_gravity="end"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ic_bg_dialog_cote"
            android:paddingTop="60dp"
            android:paddingBottom="30dp"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/dialog_delete_account_cote_title"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_round_corner_white_12dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/dialog_delete_bank_account_iv_wallet_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:id="@+id/dialog_delete_bank_account_tv_wallet_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/dialog_delete_bank_account_tv_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/gray_ddd"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/dialog_delete_bank_account_btn_cancel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_round_corner_green_l_10dp"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="Annuler"
                    tools:ignore="ButtonStyle,HardcodedText" />

                <Button
                    android:id="@+id/dialog_delete_bank_account_btn_delete"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_bg_btn"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:text="Soumettre"
                    android:layout_marginStart="20dp"
                    tools:ignore="ButtonStyle,HardcodedText"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>