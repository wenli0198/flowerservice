<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.test.aoner.fanow.test.activity_fragment_flower.login_flower.LoginPhoneNumActivity_flower">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:textSize="58sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:text="@string/activity_login_phone_num_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_login_phone_num"
            android:layout_marginTop="20dp"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <com.test.aoner.fanow.test.view_flower.widget_flower.SelectView_flower
                android:id="@+id/activity_login_phone_num_sv_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:hint="@string/word_enter"
                android:layout_marginTop="20dp"
                app:title="@string/activity_login_select_country"/>

            <TextView
                android:id="@+id/activity_login_phone_num_tv_mobile_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/activity_login_enter_phone_num"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                android:paddingHorizontal="12dp"
                android:background="@drawable/ic_bg_input">

                <TextView
                    android:id="@+id/activity_login_phone_num_tv_prefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_l"
                    android:layout_margin="12dp"/>

                <com.test.aoner.fanow.test.view_flower.widget_flower.InfoInputEditText
                    android:id="@+id/activity_login_phone_num_et_phone_num"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:inputType="number"
                    android:hint="@string/activity_login_enter_phone_num"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    tools:ignore="Autofill,TextFields" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/activity_login_phone_num_btn_next"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_round_corner_green_flower_12dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="end"
                android:layout_marginHorizontal="50dp"
                android:src="@drawable/icon_next"
                android:text="@string/word_next"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/activity_login_phone_num_ib_accept"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/icon_item_check_true"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/activity_login_phone_num_tv_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textSize="12sp"
                    android:textColor="#FF9D9C9C"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_login_phone_num_view_operated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/activity_login_phone_num_iv_operated_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_d"
                        android:textSize="14sp"
                        android:text="@string/operated_company_desc"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/activity_login_phone_num_tv_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-black"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>