<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.aoner.fanow.test.activity_fragment_flower.loan_flower.RepayPaystackActivity_Niri_flower">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.test.aoner.fanow.test.view_flower.widget_flower.TitleView_flower
                android:id="@+id/activity_repay_paystack_list_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:isWhiteStyle="false"
                app:title="Select a bank account"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="30dp"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="20dp">

                <LinearLayout
                    android:id="@+id/activity_repay_paystack_list_layout_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"/>

                <Button
                    android:id="@+id/activity_repay_paystack_list_btn_add_bank_card"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_bg_input"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="Add a new bank card"
                    android:textAllCaps="false"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/activity_repay_paystack_list_btn_repay"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_bg_btn"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="Repay now"
                    android:textAllCaps="false"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:id="@+id/activity_repay_paystack_list_view_operated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="18dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/activity_repay_paystack_list_iv_operated_logo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_d"
                            android:textSize="14sp"
                            android:text="@string/operated_company_desc"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:id="@+id/activity_repay_paystack_list_tv_company_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-black"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>